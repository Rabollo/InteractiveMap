function createDetailsWindowLoadComments(e){var t="http://dragomen.com/interactivemap/sortplacecomments.php?id="+e;xhr.onload=function(){var e=JSON.parse(this.responseText),t=Ti.UI.createTableView({top:"240"});scrollViewDetailsWindow.add(t);for(var i=[],o=0;o<e.length;o++){var a=Ti.UI.createTableViewRow({selectedBackgroundColor:"White",height:60}),n=Ti.UI.createImageView({image:"http://graph.facebook.com/"+e[o].facebook_id+"/picture/",top:5,left:"5%",height:"50",width:"50",borderRadius:3}),r=Ti.UI.createLabel({text:e[o].comment,font:{fontSize:11},left:"25%",right:"20%",top:"2%",color:"Black",width:"70%",height:"70%"}),d=Ti.UI.createLabel({text:e[o].creation_date,font:{fontSize:7},left:"25%",top:"70%",color:"Black",width:"auto",height:"auto"});a.add(n),a.add(r),a.add(d),i.push(a),t.data=i}},xhr.onerror=function(e){alert("Network error "+e.error)},xhr.open("GET",t),xhr.setRequestHeader("content-type","application/json"),xhr.send()}